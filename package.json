    "body-parser": "^1.20.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "eslint": "^8.32.0",
    "eslint-plugin-import": "^2.27.5",
    "express": "^4.18.2",
    "inversify": "^6.0.1",
    "inversify-express-utils": "^6.4.3",
    "jest": "^29.3.1",
    "jest-junit": "^15.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.8.3",
